%% -*- mode: erlang -*-

{erl_opts, [debug_info,
	    {parse_transform, lager_transform}]}.

{cover_enabled, true}.

{deps, [{cowboy, "2.4.0"},
	{lager, "3.6.3"},
	{jiffy, "0.15.2"}]}.

{relx, [{release, {dostoevsky, "0.0.1"},
	 [dostoevsky]},
	{dev_mode, true},
	{include_erts, true},

	{extended_start_script, true}]}.

{lager, [
	 {log_root, "/var/log/dostoevsky"},
	 {handlers, [
		     {lager_console_backend, [{level, info}]},
		     {lager_file_backend, [{file, "error.log"}, {level, error}]},
		     {lager_file_backend, [{file, "console.log"}, {level, info}]}
		    ]}
	]}.
